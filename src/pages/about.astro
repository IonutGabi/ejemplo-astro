---
import type { Identity } from "./about.model.ts";

const pageTitle = "Acerca de dinámico";

const identity: Identity = {
  firstName: "Paquillo",
  country: "Argentina",
  occupation: "Progrmador",
  hobbies: ["fotografía", "beber cerveza", "fútbol"],
};

const skills: string[] = ["HTML", "CSS", "Javascript", "React", "Astro"];

const happy = true;
const finished = false;
const goal = 3;
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <link rel="icon" type="svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    <title>{pageTitle}</title>
  </head>
  <body>
    <a href="/">Home</a>
    <a href="/blog">Blog</a>
    <a href="/about">About</a>

    <h1>{pageTitle}</h1>
    <h2>Y mi nuevo blog</h2>

    <p>Esta es la página de "acerca de".</p>

    <p>Here are a few facts about me:</p>
    <ul>
      <li>Me llamo {identity.firstName}.</li>
      <li>Vivo en {identity.country} y trabajo como {identity.occupation}</li>
      {
        identity.hobbies.length >= 2 && (
          <li>
            Dos de mis hobbies son: {identity.hobbies[0]} y{" "}
            {identity.hobbies[1]}
          </li>
        )
      }
    </ul>
    <p>Mis skills:</p>
    <ul>
      {skills.map((skill) => <li>{skill}</li>)}
    </ul>

    {happy && <p>Estoy mu contento!</p>}
    {finished && <p>He completado este tutorial</p>}
    {
      goal === 3 ? (
        <p>Mi meta es completarlo en tres días</p>
      ) : (
        <p>Pues no llevo tres días</p>
      )
    }
  </body>
</html>
